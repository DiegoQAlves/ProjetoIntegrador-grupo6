        <form id="form-produto" method="POST" action="/cadastrar">
          <label>
              Nome do produto:
              <input type="text" id="nome" name="nome" placeholder="Digite o nome do Produto">
          </label>
          <label>
              Descrição:
              <input type="text" id="ingredientes" name="ingredientes" placeholder="Digite a descrição do Produto">
          </label>
          <label>
              Preço:
              <input type="number" id="preco" name="preco" step="0.01" placeholder="Digite o preço do Produto">
          </label>
          <label>
              Foto do Produto:
          <input type="file" id="img" name="imagem">
          </label>
          <button type="submit">Salvar</button>
      </form>
      
